{
	"name": "nanogpt-copilot-provider",
	"publisher": "NanoGPT",
	"displayName": "NanoGPT Provider for GitHub Copilot",
	"description": "NanoGPT Provider for Github Copilot",
	"icon": "assets/logo.png",
	"version": "0.10.0",
	"engines": {
		"vscode": "^1.105.0"
	},
	"categories": [
		"AI",
		"Chat"
	],
	"galleryBanner": {
		"color": "#100f11",
		"theme": "dark"
	},
	"homepage": "https://nano-gpt.com",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/nanogpt/nanogpt-copilot-provider"
	},
	"contributes": {
		"languageModelChatProviders": [
			{
				"vendor": "nanogpt",
				"displayName": "NanoGPT",
				"managementCommand": "nanogpt.manage"
			}
		],
		"commands": [
			{
				"command": "nanogpt.manage",
				"title": "Manage NanoGPT Provider"
			}
		],
		"configuration": {
			"title": "NanoGPT Provider",
			"properties": {
				"nanogpt.modelTemperatures": {
					"type": "object",
					"default": {},
					"description": "Custom temperature values for each model. Keys are model IDs, values are temperature numbers between 0 and 2.",
					"additionalProperties": {
						"type": "number",
						"minimum": 0,
						"maximum": 2
					}
				},
				"nanogpt.reasoning.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable reasoning capabilities for NanoGPT models."
				},
				"nanogpt.reasoning.defaultEffort": {
					"type": "string",
					"enum": ["low", "medium", "high"],
					"default": "medium",
					"description": "Default reasoning effort level for NanoGPT models."
				},
				"nanogpt.memory.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable memory capabilities for NanoGPT models."
				},
				"nanogpt.memory.defaultDays": {
					"type": "number",
					"default": 30,
					"minimum": 1,
					"maximum": 365,
					"description": "Default memory retention days for NanoGPT models."
				},
				"nanogpt.search.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable search capabilities for NanoGPT models."
				},
				"nanogpt.search.defaultMode": {
					"type": "string",
					"enum": ["standard", "deep"],
					"default": "standard",
					"description": "Default search mode for NanoGPT models."
				},
				"nanogpt.byok.enabled": {
					"type": "boolean",
					"default": false,
					"description": "Enable BYOK (Bring Your Own Key) capabilities for NanoGPT models."
				},
				"nanogpt.byok.defaultProvider": {
					"type": "string",
					"enum": ["openai", "anthropic", "google"],
					"default": "openai",
					"description": "Default BYOK provider for NanoGPT models."
				}
			}
		}
	},
	"activationEvents": [
		"onLanguageModelChat:nanogpt"
	],
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint",
		"format": "prettier --write .",
		"watch": "tsc -watch -p ./",
		"test": "npm run compile && vscode-test",
		"package": "vsce package --out nanogpt-copilot-provider.vsix"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^22",
		"@types/vscode": "^1.105.0",
		"@vscode/dts": "^0.4.1",
		"@vscode/test-cli": "^0.0.12",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.2.2",
		"eslint": "^9.13.0",
		"prettier": "^3.1.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	},
	"dependencies": {
		"openai": "^6.2.0",
		"radash": "^12.1.1",
		"tiktoken": "^1.0.22",
		"vsce": "^2.15.0",
		"zod": "^4.1.12"
	}
}
